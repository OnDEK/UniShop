<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:clickable="true"
    android:focusableInTouchMode="true" >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/registerPasswordEditText"
        android:layout_below="@+id/registerEmailEditText"
        android:layout_alignStart="@+id/registerEmailEditText"
        android:textColor="#00060A"
        android:background="#6c294F6D"
        android:textColorHint="#ff555555"
        android:hint="Password"
        android:layout_marginTop="6dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/registerPasswordConfirmEditText"
        android:layout_below="@+id/registerPasswordEditText"
        android:layout_alignStart="@+id/registerPasswordEditText"
        android:textColor="#00060A"
        android:hint="Confirm Password"
        android:background="#6c294F6D"
        android:textColorHint="#ff555555"
        android:layout_marginTop="6dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/firstnameEditText"
        android:layout_alignStart="@+id/firstnameEditText"
        android:layout_marginTop="6dp"
        android:id="@+id/lastnameEditText"
        android:textColor="#00060A"
        android:background="#6c294F6D"
        android:textColorHint="#ff555555"
        android:hint="Last Name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/firstnameEditText"
        android:textColor="#00060A"
        android:background="#6c294F6D"
        android:textColorHint="#ff555555"
        android:hint="First Name"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/registerPasswordConfirmEditText"
        android:layout_alignStart="@+id/registerPasswordConfirmEditText" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_logosvg_final"
        android:id="@+id/register_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_register"
        android:id="@+id/register_heading_image"
        android:adjustViewBounds="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/register_logo"
        android:layout_alignStart="@+id/register_logo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/registerEmailEditText"
        android:textColor="#00060A"
        android:background="#6c294F6D"
        android:textColorHint="#ff555555"
        android:hint="Email"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/register_heading_image"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/sendRegisterButton"
        android:onClick="handleRegisterRequest"
        android:background="#294F6D"
        android:textColor="#ffffffff"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/lastnameEditText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="By clicking Register you agree to our Terms of Service and that you have read our Privacy Policy. You may also receive push notifications and can opt-out at any time."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/register_agreement"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:textColor="#bebebe" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/registerEmailEditText"
        android:layout_alignTop="@id/registerEmailEditText"
        android:layout_alignBottom="@id/registerEmailEditText"
        android:src="@drawable/exclamation_red"
        android:layout_marginLeft="2dp"
        android:id="@+id/registerEmailImage"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/registerPasswordEditText"
        android:layout_alignTop="@id/registerPasswordEditText"
        android:layout_alignBottom="@id/registerPasswordEditText"
        android:src="@drawable/exclamation_red"
        android:layout_marginLeft="2dp"
        android:id="@+id/registerPasswordImage"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/registerPasswordConfirmEditText"
        android:layout_alignTop="@id/registerPasswordConfirmEditText"
        android:layout_alignBottom="@id/registerPasswordConfirmEditText"
        android:src="@drawable/exclamation_red"
        android:layout_marginLeft="2dp"
        android:id="@+id/registerConfirmPasswordImage"/>
</RelativeLayout>