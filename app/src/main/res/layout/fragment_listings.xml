<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="#F1F1F1"
    >

    <Button
        android:id="@+id/createListing"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:text="New Listing"
        android:textColor="#F1F1F1"
        android:onClick="onCreateListingClick"
        android:background="#294F6D"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/createListing"
        android:layout_alignParentStart="true">

        <ListView
            android:id="@+id/listingList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="false"
            android:listSelector="@android:color/transparent"
            android:layout_weight="2"
            android:padding="3dp"
            android:dividerHeight="5dp"
            android:background="#294F6D"
            android:cacheColorHint="#000000"
            android:drawSelectorOnTop="false"
            />

    </LinearLayout>

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/button3"
        android:background="#294F6D"
        android:textColor="#f1f1f1"
        android:onClick="setListEditable"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listings"
        android:textColor="#294F6D"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>