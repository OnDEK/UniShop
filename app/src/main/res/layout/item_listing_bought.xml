<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#F1F1F1"
    >
    <Button
        android:id="@+id/bought_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:onClick="handleChat"/>

    <TextView
        android:id="@+id/bought_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="#00060A"
        android:textSize="20sp"
        android:layout_toStartOf="@+id/bought_chat"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/bought_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="top|center_horizontal"
        android:textColor="#00060A"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/bought_chat" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_alignBottom="@+id/bought_button"
        android:layout_toStartOf="@+id/bought_finish"
        android:id="@+id/bought_cancel"
        android:background="#00FFFFFF"
        android:textColor="#FF000000"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/bought_chat"
        android:onClick="onCancelTransactionClick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:layout_alignBottom="@+id/bought_button"
        android:layout_toStartOf="@+id/bought_cancel"
        android:id="@+id/bought_chat"
        android:background="#00FFFFFF"
        android:textColor="#FF000000"
        android:textAllCaps="false"
        android:onClick="handleChat"
        android:layout_alignTop="@+id/bought_price" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete"
        android:layout_alignBottom="@+id/bought_button"
        android:layout_alignParentEnd="true"
        android:id="@+id/bought_finish"
        android:background="#00FFFFFF"
        android:textColor="#FF000000"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/bought_cancel"
        android:onClick="onCompleteTransactionClick"/>
</RelativeLayout>