<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bb_bottom_bar_top_shadow"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/listing_home_thumbnail" />

    <TextView
        android:id="@+id/listing_personal_item_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="#ff000000"
        android:inputType="text"
        android:text="Post title"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/listing_home_thumbnail"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/listing_personal_biddinginfo_edittext"
        android:text="Biddding \nInfo"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#ff000000"
        android:layout_below="@+id/listing_personal_item_title"
        android:layout_toEndOf="@+id/listing_home_thumbnail" />

    <TextView
        android:id="@+id/zero_start_edittext"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/listing_personal_item_title"
        android:layout_toEndOf="@+id/imageView8"
        android:textColor="#ff000000"
        android:paddingRight="17sp"
        android:layout_alignBottom="@+id/imageView8"
        android:gravity="right|center_vertical"/>

    <TextView
        android:id="@+id/one_star_edittext"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textColor="#ff000000"
        android:layout_toEndOf="@+id/imageView8"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_below="@+id/imageView8"
        android:paddingRight="17sp"
        android:gravity="right|center_vertical"/>

    <TextView
        android:id="@+id/two_star_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:layout_below="@+id/one_star_edittext"
        android:layout_alignBottom="@+id/imageView12"
        android:layout_alignEnd="@+id/one_star_edittext"
        android:layout_toEndOf="@+id/imageView12"
        android:paddingRight="17sp"
        android:gravity="right|center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listing_personal_item_title"
        android:id="@+id/three_star_edittext"
        android:textColor="#ff000000"
        android:layout_above="@+id/imageView14"
        android:layout_alignParentEnd="true"
        android:paddingRight="17sp"
        android:layout_toEndOf="@+id/imageView13"
        android:gravity="right|center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:textColor="#ff000000"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView15"
        android:id="@+id/four_star_edittext"
        android:layout_below="@+id/three_star_edittext"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView14"
        android:paddingRight="17sp"
        android:gravity="right|center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:layout_alignBottom="@+id/imageView15"
        android:id="@+id/five_star_edittext"
        android:textColor="#ff000000"
        android:layout_below="@+id/four_star_edittext"
        android:layout_alignParentEnd="true"
        android:paddingRight="17sp"
        android:layout_toEndOf="@+id/imageView15" />

    <ImageView
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_star_empty"
        android:layout_below="@+id/listing_personal_item_title"
        android:layout_toEndOf="@+id/listing_personal_biddinginfo_edittext"
        android:id="@+id/imageView8" />


    <ImageView
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_star_one"
        android:layout_below="@+id/imageView8"
        android:layout_toEndOf="@+id/listing_personal_biddinginfo_edittext"
        android:id="@+id/imageView10" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:src="@drawable/ic_star_two"
        android:id="@+id/imageView12"
        android:layout_below="@+id/imageView10"
        android:layout_toEndOf="@+id/listing_personal_biddinginfo_edittext"
        android:layout_alignBottom="@+id/listing_personal_biddinginfo_edittext" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_three"
        android:layout_below="@+id/listing_personal_item_title"
        android:layout_toEndOf="@+id/zero_start_edittext"
        android:id="@+id/imageView13"
        android:layout_above="@+id/one_star_edittext" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_four"
        android:layout_below="@+id/zero_start_edittext"
        android:layout_toEndOf="@+id/zero_start_edittext"
        android:id="@+id/imageView14"
        android:layout_above="@+id/two_star_edittext" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_five"
        android:layout_below="@+id/one_star_edittext"
        android:layout_toEndOf="@+id/two_star_edittext"
        android:id="@+id/imageView15"
        android:layout_alignBottom="@+id/two_star_edittext" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/listing_personal_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:onClick="handleListingClick" />

    <Button
        android:background="@drawable/delete_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/listing_personal_button_delete"
        android:visibility="invisible"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:layout_alignBaseline="@+id/listing_personal_biddinginfo_edittext"
        android:layout_alignBottom="@+id/listing_personal_biddinginfo_edittext"
        android:layout_alignParentEnd="true"
        android:onClick="onDeleteListingClick"/>

</RelativeLayout>