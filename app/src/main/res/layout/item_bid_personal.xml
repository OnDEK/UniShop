<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/bb_bottom_bar_top_shadow"
        android:layout_alignParentTop="true"
        android:id="@+id/bidding_personal_thumbnail"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/bidding_personal_title"
        android:layout_alignParentEnd="true"
        android:textColor="#FF000000"
        android:layout_toEndOf="@+id/bidding_personal_thumbnail" />

    <TextView
        android:text="Your bid:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/bidding_personal_thumbnail"
        android:id="@+id/textView2"
        android:textColor="#FF000000"
android:gravity="center"
        android:layout_below="@+id/bidding_personal_title" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bidding_personal_title"
        android:layout_toEndOf="@+id/textView2"
        android:id="@+id/bidding_personal_yourbid"
        android:textColor="#FF000000"
        android:gravity="center"
        android:layout_alignParentBottom="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/bidding_personal_topbid"
        android:textColor="#FF000000"
        android:gravity="center"
        android:layout_below="@+id/bidding_personal_title" />

    <TextView
        android:text="Top Bid:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/bidding_personal_topbid"
        android:id="@+id/textView6"
        android:textColor="#FF000000"
        android:gravity="center"
        android:layout_below="@+id/bidding_personal_title" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:onClick="handleListingClick"
        android:id="@+id/bidding_personal_button"/>
</RelativeLayout>