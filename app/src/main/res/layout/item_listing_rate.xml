<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#F1F1F1"
    >

    <TextView
        android:id="@+id/rate_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="#00060A"
        android:textSize="20sp"
        android:layout_toStartOf="@+id/sold_chat"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_star_one"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#00FFFFFF"
        android:id="@+id/one_star_rate"
        android:tag="1"
        android:onClick="rateTransaction"/>
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_star_two"
        android:background="#00FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/one_star_rate"
        android:id="@+id/two_star_rate"
        android:tag="2"
        android:onClick="rateTransaction"/>
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_star_three"
        android:background="#00FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/two_star_rate"
        android:id="@+id/three_star_rate"
        android:tag="3"
        android:onClick="rateTransaction"/>
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_star_four"
        android:background="#00FFFFFF"
        android:layout_below="@+id/rate_title"
        android:layout_toEndOf="@+id/three_star_rate"
        android:id="@+id/four_star_rate"
        android:tag="4"
        android:onClick="rateTransaction"/>
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_star_five"
        android:background="#00FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/four_star_rate"
        android:id="@+id/five_star_rate"
        android:tag="5"
        android:onClick="rateTransaction"/>

</RelativeLayout>